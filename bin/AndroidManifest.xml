<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.contactapp"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.contactapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
      
        <activity
            android:name="com.example.contactapp.ShowContact"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.contactapp.ShowContact" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.contactapp.AddNewContact"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.contactapp.AddNewContact" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.contactapp.EditContact"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.contactapp.EditContact" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.contactapp.AddNewAddress"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.contactapp.AddNewAddress" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.contactapp.AddNewAddressFromEdit"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.contactapp.AddNewAddressFromEdit" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.contactapp.EditAddress"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.contactapp.EditAddress" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>